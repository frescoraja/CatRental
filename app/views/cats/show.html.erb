<h1> <%= @cat.name %>'s Info </h1>

<table>
  <tr>
    <th>Birth Date</th>
    <td> <%= @cat.birth_date %> </td>
  </tr>
  <tr>
    <th>Age</th>
    <td> <%= @cat.age %> </td>
  </tr>
  <tr>
    <th>Color</th>
    <td> <%= @cat.color %> </td>
  </tr>
  <tr>
    <th>Gender</th>
    <td> <%= @cat.sex %> </td>
  </tr>
    <th>Description</th>
    <td> <%= @cat.description %> </td>
  </tr>
</table>

<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat), method: :get %>
<br>
<%= link_to "Cats Index", cats_url, method: :get %>
